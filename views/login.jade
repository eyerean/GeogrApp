extends layout_reg_log

block content

	.container
		form.form-signin(role="form" method="POST")
			h2.form-signin-heading Please Sign in
			input.form-control(type="text" name="AM" placeholder="AM" required value="P10100")
			input.form-control(type="password" name="password" placeholder="Password" required value="1234")
			
			button.btn.btn-lg.btn-primary.btn-block(type="submit") Sign in
			span Not a member? 
			a(href='/register') Register here!