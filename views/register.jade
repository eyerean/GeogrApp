extends layout_reg_log

block content

	.container
		form.form-signin(role="form" method="POST")
			h2.form-signin-heading Please Register
			input.form-control(type="text" name="firstName" placeholder="First Name" required autofocus)
			input.form-control(type="text" name="lastName" placeholder="Last Name" required)
			input.form-control(type="text" name="AM" placeholder="AM" required)
			input.form-control(type="password" name="password" placeholder="Password" required)
			input.form-control(type="password" name="password2" placeholder="Repeat Password" required)

			button.btn.btn-lg.btn-primary.btn-block(type="submit") Register
			span Already a member? 
			a(href='/login') Sign in here!